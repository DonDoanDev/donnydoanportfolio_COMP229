<%- include ('partials/header.ejs') %>
<%- include ('partials/main_nav.ejs') %> 

  <!-- Main Content-->
  <div class="form-container">
    <form onsubmit="return submitForm()">
      <input class="form-input" type="text" id="firstName" placeholder="First Name"></input>
      <input class="form-input" type="text" id="lastName" placeholder="Last Name"></input>
      <input class="form-input" type="text" id="contactNumber" placeholder="Contact Number"></input>
      <input class="form-input" type="email" id="email" placeholder="Email"></input>
      <input class="form-button" type="submit" value="Submit"></input>
    </form>
  </div>
  <script>
    function submitForm() {
      // Capture the values entered by the user
      var firstName = document.getElementById("firstName").value;
      var lastName = document.getElementById("lastName").value;
      var contactNumber = document.getElementById("contactNumber").value;
      var email = document.getElementById("email").value;

      // Log the captured values (for testing purposes only)
      console.log("First Name: " + firstName);
      console.log("Last Name: " + lastName);
      console.log("Contact Number: " + contactNumber);
      console.log("Email: " + email);

      // Redirect the user back to the home page
      window.location.href = "/home";

      // Prevent the form from submitting
      return false;
    }
  </script>


